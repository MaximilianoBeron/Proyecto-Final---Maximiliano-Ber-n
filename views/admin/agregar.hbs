<div class="container-fluid row align-items-center hero scroll_section">


    <div class="row" style="margin:60px auto;">
        <div class="col-5" style="margin:100px auto;">
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <h5>Agregar una nueva novedad:</h5>


                <div class="input-group mt-4 mb-3">
                    <span class="input-group-text">Lugar</span>
                    <input type="text" class="form-control" aria-label="Sizing example input"
                        aria-describedby="inputGroup-sizing-default" name="lugar">
                </div>


                <div class="input-group mb-3">
                    <span class="input-group-text">Fecha</span>
                    <input type="text" class="form-control" aria-label="Sizing example input"
                        aria-describedby="inputGroup-sizing-default" name="fecha">
                </div>


                <div class="form-group mb-3">
                    <textarea class="form-control" placeholder="UbicaciÃ³n" name="ubicacion"
                        style="height: 120px"></textarea>
                </div>


                <div class="form-group mb-4">
                    <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                </div>


                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>

            {{#if error}}
            <p class="my-2">{{message}} </p>
            {{/if}}

        </div>

    </div>

</div>