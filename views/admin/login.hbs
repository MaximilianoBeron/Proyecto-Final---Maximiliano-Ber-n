<div class="container-fluid hero scroll_section">
    <div class="row" style="margin:60px auto;">
        <div class="col-5" style="margin:100px auto;" >
            <h5>Ingrese su usuario y password para ingresar:</h5>
            <form action="/admin/login" method="post">
                <div class="form-group mt-4 mb-3">
                    <label for="usuario">Usuario</label>
                    <input type="text" class="form-control" id="usuario" aria-describedby="emailHelp" name="usuario">


                </div>

                <div class="form-group mb-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>

                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
            {{#if error}}
            <p>¡Usuario o contraseña incorrecto!</p>
            {{/if}}

        </div>

    </div>
</div>
